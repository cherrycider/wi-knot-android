<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wiknotLightBlue">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/slide_padding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/intro_2_600dp" />



        <TextView
            android:id="@+id/slide_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/slide_text_2"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="@string/slide_2_title"
            android:textColor="@android:color/black"
            android:alpha="0.7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="64dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slide_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/slide_padding_2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:text="@string/slide_2_desc"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:alpha="0.7"
            android:textSize="18sp" />


    </RelativeLayout>
</RelativeLayout>