<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wiknotLightBlue">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/slide_padding_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/intro_3_600dp" />



        <TextView
            android:id="@+id/slide_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/slide_text_3"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="@string/slide_3_title"
            android:textColor="@android:color/black"
            android:alpha="0.9"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slide_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/slide_padding_3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="96dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="48dp"
            android:text="@string/slide_3_desc"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:alpha="0.9"
            android:textSize="18sp" />


    </RelativeLayout>
</RelativeLayout>